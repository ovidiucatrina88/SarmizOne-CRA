# Production Environment Configuration for Linux Server Deployment
# Copy this file and update the values for your production environment

# Database Configuration
DATABASE_URL=postgresql://risk_app_user:your_secure_password@localhost:5432/fair_risk_db
PGHOST=localhost
PGPORT=5432
PGDATABASE=fair_risk_db
PGUSER=risk_app_user
PGPASSWORD=your_secure_password

# Application Configuration
NODE_ENV=production
SESSION_SECRET=your_very_secure_session_secret_at_least_32_characters_long
BYPASS_AUTH=true

# Production deployment flag
PRODUCTION_DEPLOYMENT=true

# Optional: External services (if needed)
# OPENAI_API_KEY=your_openai_key_if_using_ai_features
# SLACK_WEBHOOK_URL=your_slack_webhook_for_notifications